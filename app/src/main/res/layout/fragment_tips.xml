<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TipsFragment"
    android:background="@color/back"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/navbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp">

            <ImageView
                android:id="@+id/logo2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/logopng"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:scaleType="fitXY"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="HEARTFIT"
                android:layout_gravity="center"
                android:fontFamily="@font/logofont"
                android:textColor="@color/username"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="3dp"></TextView>
        </LinearLayout>

    </com.google.android.material.appbar.MaterialToolbar>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/navbar">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:weightSum="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tümü"
                android:textColor="@color/black"
                android:layout_weight="0.3"
                android:layout_marginLeft="5dp"></Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Egzersizler"
                android:textColor="@color/black"
                android:layout_weight="0.5"
                android:layout_marginLeft="5dp"></Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beslenme"
                android:textColor="@color/black"
                android:layout_weight="0.5"
                android:layout_marginLeft="5dp"></Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kilo Verme"
                android:textColor="@color/black"
                android:layout_weight="0.5"
                android:layout_marginLeft="5dp"></Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trendler"
                android:textColor="@color/black"
                android:layout_weight="0.5"
                android:layout_marginLeft="5dp"></Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Başarı Hikayeleri"
                android:textColor="@color/black"
                android:layout_weight="0.5"
                android:layout_marginLeft="5dp"></Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ekipman İncelemeleri"
                android:textColor="@color/black"
                android:layout_weight="0.5"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"></Button>

        </LinearLayout>
    </HorizontalScrollView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewblog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/blogposts"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:scaleType="fitXY"
                android:layout_margin="5dp"
                android:layout_marginBottom="110dp"/>

        </LinearLayout>

    </ScrollView>

    <requestFocus
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>